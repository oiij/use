{
  "name": "@oiij/use-monorepo",
  "type": "module",
  "version": "0.0.1",
  "description": "A starter template for TypeScript projects",
  "author": "oiij",
  "license": "MIT",
  "homepage": "https://github.com/oiij/use",
  "repository": {
    "type": "git",
    "url": "git@github.com:oiij/use.git"
  },
  "bugs": "https://github.com/oiij/use/issues",
  "keywords": [
    "use",
    "vue-use",
    "vue3",
    "typescript",
    "vue hooks"
  ],
  "scripts": {
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "pkg:dev": "pnpm -r --parallel run dev",
    "pkg:build": "pnpm -F @oiij/use -F @oiij/css-render -F @oiij/markdown-it build && pnpm -F !@oiij/use -F !@oiij/css-render -F !@oiij/markdown-it build",
    "publish:all": "pnpm -r run publish",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepublishOnly": "pnpm build",
    "release": "bumpp && npm publish",
    "awe": "pnpx are-we-esm",
    "nmi": "pnpx node-modules-inspector",
    "start": "esno src/index.ts",
    "test": "vitest",
    "update:deps": "taze -w && pnpm i",
    "type:check": "vue-tsc --noEmit",
    "cz": "czg",
    "commit": "git pull && git add -A && pnpm cz && git push",
    "link": "pnpm link --global",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "npx simple-git-hooks"
  },
  "dependencies": {
    "@oiij/ai-editor": "workspace:*",
    "@oiij/chrome-tabs": "workspace:*",
    "@oiij/css-render": "workspace:*",
    "@oiij/directives": "workspace:*",
    "@oiij/e-charts": "workspace:*",
    "@oiij/emoji-picker": "workspace:*",
    "@oiij/js-pdf": "workspace:*",
    "@oiij/markdown-it": "workspace:*",
    "@oiij/naive-ui": "workspace:*",
    "@oiij/shiki": "workspace:*",
    "@oiij/three-js": "workspace:*",
    "@oiij/tiptap": "workspace:*",
    "@oiij/use": "workspace:*",
    "@oiij/utils": "workspace:*",
    "@oiij/v-charts": "workspace:*",
    "@oiij/xlsx": "workspace:*",
    "naive-ui": "^2.42.0",
    "three": "^0.177.0",
    "vue": "^3.5.17"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.16.1",
    "@oiij/tsconfig": "^0.0.1",
    "@types/node": "^24.0.7",
    "@types/three": "^0.177.0",
    "@vitejs/plugin-vue": "^6.0.0",
    "@vitest/ui": "^3.2.4",
    "bumpp": "^10.2.0",
    "commitlint": "^19.8.1",
    "cz-git": "^1.11.2",
    "czg": "^1.11.2",
    "eslint": "^9.30.0",
    "eslint-plugin-format": "^1.0.1",
    "esno": "^4.8.0",
    "lint-staged": "^16.1.2",
    "postcss": "^8.5.6",
    "simple-git-hooks": "^2.13.0",
    "taze": "^19.1.0",
    "tsdown": "^0.12.9",
    "typescript": "^5.8.3",
    "vite": "^7.0.0",
    "vite-plugin-dts": "^4.5.4",
    "vitepress": "^1.6.3",
    "vitepress-demo-plugin": "^1.4.5",
    "vitest": "^3.2.4",
    "vue-tsc": "^2.2.10"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged && pnpm type:check"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "pnpm lint:fix"
    ]
  }
}
