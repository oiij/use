{
  "name": "@oiij/use-monorepo",
  "type": "module",
  "version": "0.0.1",
  "description": "A starter template for TypeScript projects",
  "author": "oiij",
  "license": "MIT",
  "homepage": "https://github.com/oiij/use",
  "repository": {
    "type": "git",
    "url": "git@github.com:oiij/use.git"
  },
  "bugs": "https://github.com/oiij/use/issues",
  "keywords": [
    "use",
    "vue-use",
    "vue3",
    "typescript",
    "vue hooks"
  ],
  "scripts": {
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "pkg:dev": "pnpm -r --parallel run dev",
    "pkg:build": "pnpm -F @oiij/use -F @oiij/css-render -F @oiij/markdown-it build && pnpm -F !@oiij/use -F !@oiij/css-render -F !@oiij/markdown-it build",
    "publish:all": "pnpm -r run publish",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepublishOnly": "pnpm build",
    "release": "bumpp && npm publish",
    "awe": "pnpx are-we-esm",
    "nmi": "pnpx node-modules-inspector",
    "start": "esno src/index.ts",
    "test": "vitest",
    "update:deps": "taze -w && pnpm i",
    "type:check": "vue-tsc --noEmit",
    "cz": "czg",
    "commit": "git pull && git add -A && pnpm cz && git push",
    "link": "pnpm link --global",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "npx simple-git-hooks"
  },
  "dependencies": {
    "@oiij/ai-editor": "workspace:*",
    "@oiij/chrome-tabs": "workspace:*",
    "@oiij/css-render": "workspace:*",
    "@oiij/directives": "workspace:*",
    "@oiij/e-charts": "workspace:*",
    "@oiij/emoji-picker": "workspace:*",
    "@oiij/js-pdf": "workspace:*",
    "@oiij/markdown-it": "workspace:*",
    "@oiij/naive-ui": "workspace:*",
    "@oiij/shiki": "workspace:*",
    "@oiij/three-js": "workspace:*",
    "@oiij/tiptap": "workspace:*",
    "@oiij/use": "workspace:*",
    "@oiij/utils": "workspace:*",
    "@oiij/v-charts": "workspace:*",
    "@oiij/xlsx": "workspace:*",
    "naive-ui": "catalog:",
    "three": "catalog:",
    "vue": "catalog:"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:",
    "@oiij/tsconfig": "catalog:",
    "@types/node": "catalog:",
    "@types/three": "catalog:",
    "@vitejs/plugin-vue": "catalog:",
    "@vitest/ui": "catalog:",
    "bumpp": "catalog:",
    "commitlint": "catalog:",
    "cz-git": "catalog:",
    "czg": "catalog:",
    "eslint": "catalog:",
    "eslint-plugin-format": "catalog:",
    "esno": "catalog:",
    "jsonfile": "catalog:",
    "lint-staged": "catalog:",
    "postcss": "catalog:",
    "simple-git-hooks": "catalog:",
    "taze": "catalog:",
    "tsdown": "catalog:",
    "typescript": "catalog:",
    "vite": "catalog:",
    "vite-plugin-dts": "catalog:",
    "vitepress": "catalog:",
    "vitepress-demo-plugin": "catalog:",
    "vitest": "catalog:",
    "vue-tsc": "catalog:"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged && pnpm type:check"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "pnpm lint:fix"
    ]
  }
}
